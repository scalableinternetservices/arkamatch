

<% if @rooms.present? %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
      <form action="go.cgi" method="POST">
        <hidden name="room_number" value=<%= room.id %>></hidden>
      </form>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    There are no groups yet :P
  </div>
<% end %>