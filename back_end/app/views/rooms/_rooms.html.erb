

<% if @rooms.present? %>
  <% @rooms.each do |room| %>
  <label>
    <span>Room number is: <%= room.id %></span>
  </label>
  <% end %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    There are no groups yet :P
  </div>
<% end %>